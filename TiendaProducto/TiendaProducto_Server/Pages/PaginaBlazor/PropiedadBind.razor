    {
            new LibroTipo{Id=1,Nombre="Programacion",Valor=10},
            new LibroTipo{Id=1,Nombre="Diseño",Valor=20}

        }
        });
        ListaLibros.Add(new LibroBlazor()
        {
            Id = 102,
